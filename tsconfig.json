{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["ts-src/*"]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["ts-src"],
  "exclude": ["node_modules", "src", "dist", "ts-src/**/*.spec.ts", "ts-src/**/*.test.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
